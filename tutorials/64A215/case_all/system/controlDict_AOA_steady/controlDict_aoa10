FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

libs
(
    "libforces.so"
    "libOpenFOAM.so"
    "libgroovyBC.so"
    "libsimpleSwakFunctionObjects.so"
);

application     buoyantBoussinesqSimpleFoam; // simpleFoam; // 

startFrom       latestTime;

startTime       0.0;

stopAt          endTime;

endTime         3600;

deltaT          1;

writeControl    timeStep; // 

writeInterval   3600;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  off; // on; // 

maxCo	0.5;


functions
{
    forces
    {
	type			forces;
	functionObjectsLibs	("libforces.so");

	writeControl		timeStep;
	writeInterval		100;

	patches			(wing);

	pName			p;
	UName			U;
	rho			rhoInf;
	rhoInf			1.225;

	log			true;

	CofR			(0 0 0);
    }

    forceCoeffs
    {
	type			forceCoeffs;
	funtionObjectsLibs	("libforces.so");

	writeControl		timeStep;
	writeInterval		100;

	patches			(wing);

	pName			p;
	UName			U;

	log			true;		//- write force, memonet coefficient fields

	magUInf			15;		//- Free stream velocity
	rho			rhoInf;
	rhoInf			1.225;		//- Free stream density

	CofR			(0 0 0);	//- Center of rotation
	liftDir			(0.17365 0.98481 0);	//- Drag direction
	dragDir			(0.98481 0.17365 0);	//- Lift direction
	pitchAxis		(0 1 0);	//- Pitch axis
	lRef			0.5;		//- Reference length scale
						//  for momentum calculations
	Aref			0.4; // 0.045;		//- Reference area
    }
}


// ************************************************************************* //
